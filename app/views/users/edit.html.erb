<div class="main-back-image">
<div class="container">
  <div class="row ">
   <div class="col−8 mx-auto">
     <h2 class="text-white mt-5">ユーザ編集</h2>
    <%= form_with model: @user, url: user_path do |f| %>
    
     
      <%= f.label :image, "ユーザ画像", class: "col-5 text-white" %>
      <%= f.file_field :image, class: "form-control-file user_image col-7", accept: 'image/*' %>
    
      <div>
      <%= f.label :name, "ユーザ名", class: "col-5 text-white"  %>
      <%= f.text_field :name, autofocus: true, class: "form-control col-7" %>
      </div>
      <div>
      <%= f.label :introduction, "紹介文", class: "col-5 text-white"  %>
      <%= f.text_area :introduction, autofocus: true, class: "form-control col-7" %>
     </div>
     <%= f.submit "編集", class: "btn btn-primary mt-5 mb-5" %>
     
    <% end %> 
    </div>
  </div>
</div>
</div>